<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false">
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Inicio_de_sesion">


    <ImageView
        android:id="@+id/imagenVerificado"
        android:padding="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/logo_world_cup"
        app:layout_constraintBottom_toTopOf="@id/view_nombre_usuario"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

     <View
        android:id="@+id/view_nombre_usuario"
        android:layout_width="match_parent"
         android:layout_marginLeft="30dp"
         android:layout_marginRight="30dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenVerificado"
        app:layout_constraintBottom_toTopOf="@id/view_password"/>

    <TextView
        android:id="@+id/texto_nombre_usuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_nombre_usuario"
        app:layout_constraintStart_toStartOf="@id/view_nombre_usuario"
        app:layout_constraintBottom_toTopOf="@id/edit_text_user"
        android:text="Nombre de usuario o E-mail"
        android:textColor="#9D142F"
        />

    <EditText
        android:id="@+id/edit_text_user"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/texto_nombre_usuario"
        app:layout_constraintBottom_toBottomOf="@id/view_nombre_usuario"
        app:layout_constraintStart_toStartOf="@id/view_nombre_usuario"
        android:background="@drawable/edit_text_style"
        android:elevation="5dp"
        android:inputType="text"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:textColor="#9D142F"
        />

    <View
        android:id="@+id/view_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_nombre_usuario"
        app:layout_constraintBottom_toTopOf="@id/boton_inicio_sesion2"
        />

    <TextView
        android:id="@+id/texto_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/view_password"
        app:layout_constraintStart_toStartOf="@id/view_password"
        app:layout_constraintBottom_toTopOf="@id/edit_password"
        android:text="Contraseña"
        android:textColor="#9D142F"

        />
    <EditText
        android:id="@+id/edit_password"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/texto_password"
        app:layout_constraintBottom_toBottomOf="@id/view_password"
        app:layout_constraintStart_toStartOf="@id/view_password"
        android:background="@drawable/edit_text_style"
        android:elevation="5dp"
        android:inputType="text"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        android:textColor="#9D142F"
        />

    <Button
        android:id="@+id/boton_inicio_sesion2"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:text="Iniciar sesion"
        android:textSize="20sp"
        app:cornerRadius="25dip"
        app:layout_constraintBottom_toTopOf="@id/recuperar_contraseña"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_password" />
        />
    <TextView
        android:id="@+id/recuperar_contraseña"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/boton_inicio_sesion2"
        android:text="¿Has olvidado tu contraseña?"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
