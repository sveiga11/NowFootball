<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Partido5">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/viewPartidoC1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#9D142F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLocalVisitante"
        android:elevation="10dp"
        />
    <View
        android:id="@+id/viewEstadoPartidoC1"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="#F60000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidoC1"
        app:layout_constraintRight_toRightOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        android:elevation="5dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImagenEquipoLocalC1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/francia_image"
        android:background="@drawable/sombra_image"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        android:layout_marginLeft="10dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImagenEquipoVisitanteC1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/australia_image"
        android:background="@drawable/sombra_image"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintRight_toRightOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/horaPartidoC1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/11 - 20:00"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidoC1"
        app:layout_constraintRight_toRightOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toTopOf="@id/resultadoPartidoC1"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/resultadoPartidoC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- : -"
        android:textSize="40dp"
        android:elevation="10dp"
        app:layout_constraintLeft_toRightOf="@id/ImagenEquipoLocalC1"
        app:layout_constraintRight_toLeftOf="@id/ImagenEquipoVisitanteC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        android:textColor="@color/white"
        />

    <RadioGroup
        android:id="@+id/buttonLocalVisitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:checkedButton="@+id/option1"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/campoAliniaciones"
        >

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rb_segmented_left"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:text="Local"
            android:textSize="18dp"
            android:textColor="@drawable/rb_text" />


        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rb_segmented_right"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:text="Visitante"
            android:textSize="18dp"
            android:textColor="@drawable/rb_text" />
    </RadioGroup>

    <View
        android:id="@+id/campoAliniaciones"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLocalVisitante"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/no_aliniaciones"
        app:layout_constraintBottom_toTopOf="@id/viewPartidosGrupo"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todavia no hay aliniaciones \nconfirmadas"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/campoAliniaciones"
        app:layout_constraintLeft_toLeftOf="@id/campoAliniaciones"
        app:layout_constraintRight_toRightOf="@id/campoAliniaciones"
        app:layout_constraintBottom_toBottomOf="@id/campoAliniaciones"
        android:textAlignment="center"
        />
    <View
        android:id="@+id/viewPartidosGrupo"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="100dp"
        android:background="@drawable/style_clasificacion_grupo"
        app:layout_constraintTop_toBottomOf="@id/campoAliniaciones"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="60dp"
        android:elevation="5dp"
        />
    <View
        android:id="@+id/viewTituloPartidos"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="30dp"
        android:background="@drawable/style_titulo_clasificacion"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/viewPartidosGrupo"
        android:elevation="5dp"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Partidos | Grupo D"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/viewTituloPartidos"
        app:layout_constraintLeft_toLeftOf="@id/viewTituloPartidos"
        app:layout_constraintRight_toRightOf="@id/viewTituloPartidos"
        app:layout_constraintBottom_toBottomOf="@id/viewTituloPartidos"
        android:elevation="5dp"
        />

    <View
        android:id="@+id/viewTodosLosPartidos"
        android:layout_width="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="30dp"
        android:background="@drawable/style_boton_clasificaciones"
        app:layout_constraintTop_toBottomOf="@id/viewPartidosGrupo"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:elevation="5dp"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:id="@+id/textoBotonPartidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver todos los partidos"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/viewTodosLosPartidos"
        app:layout_constraintLeft_toLeftOf="@id/viewTodosLosPartidos"
        app:layout_constraintBottom_toBottomOf="@id/viewTodosLosPartidos"
        android:elevation="5dp"
        android:paddingLeft="20dp"
        />
    <ImageView
        android:id="@+id/botonPartidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_25"
        app:layout_constraintTop_toTopOf="@id/viewTodosLosPartidos"
        app:layout_constraintRight_toRightOf="@id/viewTodosLosPartidos"
        app:layout_constraintBottom_toBottomOf="@id/viewTodosLosPartidos"
        android:elevation="5dp"
        android:paddingRight="20dp"
        />
    <View
        android:id="@+id/partido1Button"
        android:layout_width="50dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidosGrupo"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidosGrupo"
        app:layout_constraintRight_toLeftOf="@id/partido2Button"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidosGrupo"
        android:layout_margin="10dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageSeleccionPartido1"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/australia_image"
        app:layout_constraintTop_toBottomOf="@id/fechaPartido1"
        app:layout_constraintLeft_toLeftOf="@id/partido1Button"
        app:layout_constraintRight_toRightOf="@id/partido1Button"
        app:layout_constraintBottom_toTopOf="@id/resultadoPartido1"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/fechaPartido1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/11"
        android:textSize="17dp"
        android:textColor="#9D142F"
        app:layout_constraintTop_toTopOf="@id/partido1Button"
        app:layout_constraintLeft_toLeftOf="@id/partido1Button"
        app:layout_constraintRight_toRightOf="@id/partido1Button"
        app:layout_constraintBottom_toTopOf="@id/imageSeleccionPartido1"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/resultadoPartido1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- : -"
        android:textSize="17dp"
        android:textColor="#9D142F"
        app:layout_constraintTop_toBottomOf="@id/imageSeleccionPartido1"
        app:layout_constraintLeft_toLeftOf="@id/partido1Button"
        app:layout_constraintRight_toRightOf="@id/partido1Button"
        app:layout_constraintBottom_toBottomOf="@id/partido1Button"
        android:elevation="5dp"
        />
    <View
        android:id="@+id/partido2Button"
        android:layout_width="50dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidosGrupo"
        app:layout_constraintLeft_toRightOf="@id/partido1Button"
        app:layout_constraintRight_toLeftOf="@id/partido3Button"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidosGrupo"
        android:layout_margin="10dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageSeleccionPartido2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/dinamarca_image"
        app:layout_constraintTop_toBottomOf="@id/fechaPartido2"
        app:layout_constraintLeft_toLeftOf="@id/partido2Button"
        app:layout_constraintRight_toRightOf="@id/partido2Button"
        app:layout_constraintBottom_toTopOf="@id/resultadoPartido2"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/fechaPartido2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27/11"
        android:textSize="17dp"
        android:textColor="#9D142F"
        app:layout_constraintTop_toTopOf="@id/partido2Button"
        app:layout_constraintLeft_toLeftOf="@id/partido2Button"
        app:layout_constraintRight_toRightOf="@id/partido2Button"
        app:layout_constraintBottom_toTopOf="@id/imageSeleccionPartido2"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/resultadoPartido2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- : -"
        android:textSize="17dp"
        android:textColor="#9D142F"
        app:layout_constraintTop_toBottomOf="@id/imageSeleccionPartido2"
        app:layout_constraintLeft_toLeftOf="@id/partido2Button"
        app:layout_constraintRight_toRightOf="@id/partido2Button"
        app:layout_constraintBottom_toBottomOf="@id/partido2Button"
        android:elevation="5dp"
        />
    <View
        android:id="@+id/partido3Button"
        android:layout_width="50dp"
        android:layout_height="90dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidosGrupo"
        app:layout_constraintLeft_toRightOf="@id/partido2Button"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidosGrupo"
        android:layout_margin="20dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageSeleccionPartido3"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/tunez_image"
        app:layout_constraintTop_toBottomOf="@id/fechaPartido3"
        app:layout_constraintLeft_toLeftOf="@id/partido3Button"
        app:layout_constraintRight_toRightOf="@id/partido3Button"
        app:layout_constraintBottom_toTopOf="@id/resultadoPartido3"
        android:elevation="5dp"
        />

    <TextView
        android:id="@+id/fechaPartido3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1/12"
        android:textSize="17dp"
        android:textColor="#9D142F"
        app:layout_constraintTop_toTopOf="@id/partido3Button"
        app:layout_constraintLeft_toLeftOf="@id/partido3Button"
        app:layout_constraintRight_toRightOf="@id/partido3Button"
        app:layout_constraintBottom_toTopOf="@id/imageSeleccionPartido3"
        android:elevation="5dp"
        />
    <TextView
        android:id="@+id/resultadoPartido3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- : -"
        android:textSize="17dp"
        android:textColor="#9D142F"
        app:layout_constraintTop_toBottomOf="@id/imageSeleccionPartido3"
        app:layout_constraintLeft_toLeftOf="@id/partido3Button"
        app:layout_constraintRight_toRightOf="@id/partido3Button"
        app:layout_constraintBottom_toBottomOf="@id/partido3Button"
        android:elevation="5dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>