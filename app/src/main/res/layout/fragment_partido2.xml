<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="false">

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Partido2">

    <!-- TODO: Update blank fragment layout -->
    <View
        android:id="@+id/viewPartidoC1"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#9D142F"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/buttonLocalVisitante"
        android:elevation="10dp"
        />
    <View
        android:id="@+id/viewEstadoPartidoC1"
        android:layout_width="match_parent"
        android:layout_height="112dp"
        android:background="#F60000"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidoC1"
        app:layout_constraintRight_toRightOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        android:elevation="5dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImagenEquipoLocalC1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/espana_image"
        android:background="@drawable/sombra_image"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        android:layout_marginLeft="10dp"
        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ImagenEquipoVisitanteC1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/costa_rica_image"
        android:background="@drawable/sombra_image"
        android:elevation="30dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintRight_toRightOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        android:layout_marginRight="10dp"
        />
    <TextView
        android:id="@+id/horaPartidoC1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="23/11 - 17:00"
        android:elevation="15dp"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="@id/viewPartidoC1"
        app:layout_constraintRight_toRightOf="@id/viewPartidoC1"
        app:layout_constraintBottom_toTopOf="@id/resultadoPartidoC1"
        android:textColor="@color/white"
        />
    <TextView
        android:id="@+id/resultadoPartidoC1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- : -"
        android:textSize="40dp"
        android:elevation="10dp"
        app:layout_constraintLeft_toRightOf="@id/ImagenEquipoLocalC1"
        app:layout_constraintRight_toLeftOf="@id/ImagenEquipoVisitanteC1"
        app:layout_constraintBottom_toBottomOf="@id/viewPartidoC1"
        app:layout_constraintTop_toTopOf="@id/viewPartidoC1"
        android:textColor="@color/white"
        />

    <RadioGroup
        android:id="@+id/buttonLocalVisitante"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:checkedButton="@+id/option1"
        android:padding="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/viewPartidoC1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/campoAliniaciones"
        >

        <RadioButton
            android:id="@+id/option1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rb_segmented_left"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:text="Local"
            android:textSize="18dp"
            android:textColor="@drawable/rb_text" />


        <RadioButton
            android:id="@+id/option3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rb_segmented_right"
            android:button="@android:color/transparent"
            android:gravity="center"
            android:padding="8dp"
            android:text="Visitante"
            android:textSize="18dp"
            android:textColor="@drawable/rb_text" />
    </RadioGroup>

    <View
        android:id="@+id/campoAliniaciones"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintTop_toBottomOf="@id/buttonLocalVisitante"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/no_aliniaciones"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Todavia no hay aliniaciones \nconfirmadas"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/campoAliniaciones"
        app:layout_constraintLeft_toLeftOf="@id/campoAliniaciones"
        app:layout_constraintRight_toRightOf="@id/campoAliniaciones"
        app:layout_constraintBottom_toBottomOf="@id/campoAliniaciones"
        android:textAlignment="center"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>